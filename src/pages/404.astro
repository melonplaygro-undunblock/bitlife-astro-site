---
import Layout from '../layouts/BaseLayout.astro';
---
<Layout title="404 · Page Not Found">
  <section class="flex items-center justify-center min-h-screen bg-gray-100">
    <div class="max-w-md text-center p-8 bg-white rounded-lg shadow-xl">
      <!-- Large “404” heading -->
      <h1 class="text-7xl font-extrabold text-indigo-600 mb-4">404</h1>

      <!-- Optional SVG/Emoji illustration (you can swap with your own image) -->
      <div class="mb-6">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="mx-auto h-32 w-32 text-indigo-200"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M9.75 9.75V6.75M14.25 9.75V6.75M9.75 14.25V12M14.25 14.25V12M12 17.25v.75m0-13.5a6 6 0 016 6m-6-6a6 6 0 00-6 6m6-6v-1.5m0 15a6 6 0 01-6-6m6 6a6 6 0 006-6"
          />
        </svg>
      </div>

      <!-- Friendly message -->
      <p class="text-lg text-gray-700 mb-6">
        Oops—this page doesn’t exist. It might have been moved or deleted.
      </p>

      <!-- Back to Home button -->
      <a
        href="/"
        class="inline-block bg-indigo-600 text-white font-semibold px-6 py-3 rounded-full shadow-lg transition hover:bg-indigo-700"
      >
        ← Back to Home
      </a>
    </div>
  </section>
</Layout>
