---
import "../styles/global.css";
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

export interface Props { title: string; }
const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title}</title>
  <meta name="description" content="Play BitLife Online directly in your browser. Read our complete guide, tips, and tricks to master the game." />
  <link rel="canonical" href="https://example.com/" />
  <!-- Open Graph -->
  <meta property="og:title" content="Play BitLife Online - Free Browser Game" />
  <meta property="og:description" content="Enjoy BitLife Online with our guide on how to play, controls, and tips." />
  <meta property="og:type" content="website" />
  <meta property="og:url" content="https://example.com/" />
  <meta property="og:image" content="/og-image.jpg" />
  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content="Play BitLife Online - Free Browser Game" />
  <meta name="twitter:description" content="Enjoy BitLife Online with our guide on how to play, controls, and tips." />
</head>
<body class="flex flex-col min-h-screen">
  <Navbar />

  <main class="flex-grow">
    <slot />
  </main>

  <Footer />
</body>
</html>
