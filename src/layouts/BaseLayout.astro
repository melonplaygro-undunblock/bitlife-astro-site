---
import "../styles/global.css";
export interface Props { title: string; }
const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title}</title>
  <meta name="description" content="Play BitLife Online directly in your browser. Read our complete guide, tips, and tricks to master the game." />
  <link rel="canonical" href="https://example.com/" />

  <!-- Open Graph -->
  <meta property="og:title" content="Play BitLife Online - Free Browser Game" />
  <meta property="og:description" content="Enjoy BitLife Online with our guide on how to play, controls, and tips." />
  <meta property="og:type" content="website" />
  <meta property="og:url" content="https://example.com/" />
  <meta property="og:image" content="/og-image.jpg" />

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content="Play BitLife Online - Free Browser Game" />
  <meta name="twitter:description" content="Enjoy BitLife Online with our guide on how to play, controls, and tips." />

  <!-- Google Analytics (gtag.js) -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-YP8KNJXEYZ"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'G-YP8KNJXEYZ');
  </script>
<meta name="google-site-verification" content="MgpDI9uxcUmg9FWvfW3CkrU6p9PlDbxBZ5mBTrJ_lBg" />
</head>
<body>
  <header class="bg-gradient-to-r from-primary to-accent py-4 shadow-lg">
    <div class="container mx-auto px-4">
      <h1 class="text-white text-3xl font-bold">BitLife Online</h1>
    </div>
  </header>

  <main>
    <slot />
  </main>

  <footer class="bg-gray-800 text-gray-200 py-6 mt-12">
    <div class="container mx-auto px-4 text-center">
      <p>&copy; {new Date().getFullYear()} BitLife Online Fan Site. All rights reserved.</p>
    </div>
  </footer>
</body>
</html>
